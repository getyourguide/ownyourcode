{
  "extends": "./node_modules/@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true

    // Can't use ts extensions due to a known bug in ncc https://github.com/vercel/ncc/issues/1146
    // "noEmit": true,
    // "allowImportingTsExtensions": true
  },
  "include": ["./src"],
  "exclude": ["./dist", "./node_modules", "./coverage", "./.github"]
}
