{
  "extends": "./node_modules/@tsconfig/node20/tsconfig.json",

  "compilerOptions": {
    "baseUrl": "./",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowImportingTsExtensions": true
  },
  "include": ["./src"],
  "exclude": ["./dist", "./node_modules", "./coverage", "./.github"]
}
